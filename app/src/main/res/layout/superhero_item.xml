<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.fireflylearning.tasksummary.model.Task"/>
        <import type="com.fireflylearning.tasksummary.tasklist.presenters.TaskListPresenter"/>
        <import type="com.fireflylearning.tasksummary.tasklist.views.TaskView"/>
        <variable
            name="superhero"
            type="Task"/>
        <variable
            name="presenter"
            type="TaskListPresenter"/>
        <variable
            name="pic"
            type="TaskView"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/superhero_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:paddingStart="@dimen/horizontal_margin"
        android:paddingEnd="@dimen/horizontal_margin"
        android:paddingTop="@dimen/vertical_margin"
        android:paddingBottom="@dimen/vertical_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:onClick="@{()->presenter.superHeroClicked(avatar, superhero)}"

        >

        <com.fireflylearning.tasksummary.tasklist.views.TaskViewAndroidImpl
            android:id="@+id/avatar"
            android:layout_width="@dimen/pic_size"
            android:layout_height="@dimen/pic_size"
            android:contentDescription="@string/pic_description"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            android:transitionName="@string/activity_image_trans"
            android:layout_marginLeft="@dimen/horizontal_margin" />

        <TextView
            android:id="@+id/superhero_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Chicho Terremoto"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintLeft_toRightOf="@+id/avatar"
            android:layout_marginStart="@dimen/horizontal_margin"
            app:layout_constraintTop_toTopOf="@+id/avatar"
            app:layout_constraintBottom_toBottomOf="@+id/avatar"
            android:layout_marginLeft="@dimen/horizontal_margin" />

    </android.support.constraint.ConstraintLayout>

</layout>